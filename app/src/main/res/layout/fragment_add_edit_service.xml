<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.services.AddEditServiceFragment">

    <!-- Название услуги -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_service_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/service_name_required_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:inputType="textCapWords"
            android:textColor="@color/black"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Цена -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_service_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/service_base_price_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_service_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_service_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Длительность -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_service_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/service_duration_minutes_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_service_price">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_service_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Категория (Exposed Dropdown Menu) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_service_category_spinner_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/select_category_hint"
        app:endIconMode="dropdown_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_service_duration">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteServiceCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:inputType="none"
            android:textColor="@color/black"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Ввод своей категории -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_custom_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/service_custom_category_hint"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_service_category_spinner_container">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_custom_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:inputType="textCapWords"
            android:textColor="@color/black"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Активна -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_service_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checked="true"
        android:text="@string/service_active_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_custom_category"/>

    <!-- Кнопка сохранить -->
    <Button
        android:id="@+id/button_save_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/save_service_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch_service_active" />

</androidx.constraintlayout.widget.ConstraintLayout>